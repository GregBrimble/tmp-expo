{
  "main": "ui/index.tsx",
  "private": true,
  "scripts": {
    "postinstall": "npm run prebuild",
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build:styles": "ts-node scripts/build-styles.ts",
    "prebuild": "NODE_ENV=production npm run build:styles",
    "prebuild:web": "npm run prebuild",
    "build:web": "expo build:web",
    "eject": "expo eject",
    "test": "jest --watch --coverage=false --changedSince=origin/main",
    "test:ci": "jest",
    "lint": "eslint --ignore-path .gitignore --ext .js,.jsx,.ts,.tsx .",
    "check-types": "tsc",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|jsx|ts|tsx|json|json5|md|mdx)\"",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier -- --list-different",
    "validate": "concurrently \"npm run check-types\" \"npm run check-format\" \"npm run lint\" \"npm run build:web\"",
    "build:fab": "npm run fab:build",
    "fab:build": "fab build",
    "fab:serve": "fab serve fab.zip"
  },
  "dependencies": {
    "expo": "40.0.0",
    "expo-status-bar": "1.0.3",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-native": "https://github.com/expo/react-native/archive/sdk-40.0.1.tar.gz",
    "react-native-web": "0.14.10"
  },
  "devDependencies": {
    "@babel/core": "7.12.10",
    "@fab/actions": "1.0.0-rc.8.p1",
    "@fab/cli": "1.0.0-rc.8",
    "@fab/deployer-cf-workers": "1.0.0-rc.8.p1",
    "@fab/input-static": "1.0.0-rc.8",
    "@fab/plugin-render-html": "1.0.0-rc.8",
    "@fab/plugin-rewire-assets": "1.0.0-rc.8",
    "@fab/server": "1.0.0-rc.8",
    "@testing-library/jest-native": "3.4.3",
    "@testing-library/react-native": "7.1.0",
    "@types/cookie": "0.4.0",
    "@types/jest": "26.0.19",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "@types/react-native": "0.63.42",
    "@typescript-eslint/eslint-plugin": "4.11.0",
    "@typescript-eslint/parser": "4.11.0",
    "concurrently": "5.3.0",
    "cookie": "0.3.1",
    "cross-fetch": "3.0.6",
    "css-to-react-native-transform": "1.9.0",
    "eslint": "7.16.0",
    "eslint-config-prettier": "7.1.0",
    "expo-cli": "4.0.16",
    "husky": "4.3.6",
    "jest": "26.6.3",
    "jest-expo": "40.0.1",
    "lint-staged": "10.5.3",
    "postcss": "8.2.4",
    "prettier": "2.2.1",
    "react-test-renderer": "17.0.1",
    "rimraf": "3.0.2",
    "tailwindcss": "2.0.2",
    "ts-node": "9.1.1",
    "typescript": "4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run check-types && lint-staged && npm run build:web"
    }
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "eslint"
    ],
    "**/*.+(js|jsx|ts|tsx|json|json5|md|mdx)": [
      "prettier --write"
    ]
  }
}
